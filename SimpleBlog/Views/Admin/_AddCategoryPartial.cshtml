@model SimpleBlog.Models.AddCategoryViewModel

<h4>Add Category</h4>
@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    @Html.TextBoxFor(m => m.CategoryName)
    <input type="submit" class="btn btn-success btn-sm" value="Add" />
    @Html.ValidationMessageFor(m => m.CategoryName,"", new { @class="text-danger" })
}