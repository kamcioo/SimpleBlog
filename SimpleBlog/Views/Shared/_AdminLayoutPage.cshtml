<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/Admin/css")
    @Styles.Render("~/bundles/DataTables/css")

</head>
<body>
    <div>
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("AdminPanel", "MainPanel", "Admin", null, new { @class= "navbar-brand" })
                    @*<a class="navbar-brand" href="index.html">Admin Panel</a>*@
                </div>
                <!-- /.navbar-header -->
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                
                                <a href="@Url.Action("ManageUsers", "Admin")"><i class="fa fa-user fa-fw"></i> Users</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ManageCategories", "Admin")"><i class="fa fa-bars fa-fw"></i> Categories</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ManageGlobalSettings", "Admin")"><i class="fa fa-cog fa-fw"></i> Settings</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>
            </nav>
            <!-- /.navbar-static-side -->
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>

        </div> <!-- /#wrapper-->
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
